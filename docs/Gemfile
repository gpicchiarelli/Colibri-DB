# Gemfile per GitHub Pages - Compatibile con Ruby 3.1+
source "https://rubygems.org"

# Jekyll core
gem "jekyll", "~> 4.3"

# Jekyll plugins supportati da GitHub Pages
gem "jekyll-feed", "~> 0.12"
gem "jekyll-sitemap", "~> 1.4"
gem "jekyll-seo-tag", "~> 2.8"
gem "jekyll-github-metadata", "~> 2.16"

# Markdown processor
gem "kramdown-parser-gfm", "~> 1.1"

# Syntax highlighting
gem "rouge", "~> 4.0"

# Development gems
group :development do
  gem "bundler", ">= 1.17"
end

# Windows specific gems
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
end

# Performance gems
gem "wdm", "~> 0.1.1", :platforms => [:mingw, :x64_mingw, :mswin]

# Webrick per Ruby 3.0+
gem "webrick", "~> 1.7"